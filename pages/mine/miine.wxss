/* pages/mine/miine.wxss */
@import '/pages/bottom/bottom';

page {
  background: #DFDFDF
}

.scbg {
  background-color: #efefef;
  width: 100%;
  height: calc(91% - 400rpx);
  position: absolute;
  bottom: 9%;
  left: 0;
  right: 0;

}

.mine-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 380rpx;
  background-color: white;
  border-bottom: 20rpx solid rgb(10, 10, 10);
}

.touxiang {
  width: 170rpx;
  height: 170rpx;
}

.username {
  margin-top: 20rpx;
}

.firstblock {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: start;
  width: 92%;
  height: 350rpx;
  padding: 2% 4% 0 4%;
  background-color: white;
}

.text {
  width: 92%;
  background-color: white;
  word-break: break-all;
}

.send-time {
  width: 92%;
  position: absolute;
  bottom: 0;
  color: #CBCBCB;
  height: 50rpx;
  border-bottom: 10rpx solid #DFDFDF;
}

.secondblock {
  width: 92%;
  position: relative;
  padding: 0 4% 0% 4%;
  height: 100rpx;
  display: flex;
  justify-content: start;
  align-items: center;
  background-color: white;
}

.img-zan {
  width: 50rpx;
  height: 50rpx;
}

.num {
  margin-left: 10rpx;
}

.delete {
  position: absolute;
  right: 4%;
  width: 150rpx;
  height: 50rpx;
  border-radius: 10%;
  text-align: center;
  background-color: red;
  color: white;
}