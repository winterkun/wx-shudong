<!--pages/enroll/enroll.wxml-->
<view class="container">
	<view class="outside first">
		<input id="name" placeholder="用户名" placeholder-class="inputholder-class" class="inpt" type="text" bindinput="usernameInput"></input>
	</view>
	<view class="outside second">
		<input id="phonenumber" placeholder="手机号" placeholder-class="inputholder-class" class="inpt" type="number" bindinput="phonenumberInput"></input>
	</view>
	<view class="outside second">
		<input id="psw" placeholder="登录密码" placeholder-class="inputholder-class" class="inpt" type="password" bindinput="passwordInput"></input>
	</view>
	<view class="outside second">
		<input id="pswack" placeholder="确认密码" placeholder-class="inputholder-class" class="inpt" type="password" bindinput="passwordInputAck"></input>
	</view>
	<view class="enroll" bindtap="register">注册</view>
	<text class="link" bindtap="signIn">如果已有账号,点击登录</text>


</view>